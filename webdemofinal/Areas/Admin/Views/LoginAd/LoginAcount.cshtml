
@model webdemofinal.Models.AdminUser
<h2>ĐĂNG NHẬP</h2>
<hr />
@using (Html.BeginForm("LoginAcount", "LoginAd", new {area = "Admin"}))
{
    <input type="hidden" value="@Session["chon"]" name="chon" />
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td style="padding: 5px">@Html.LabelFor(model => model.ID) </td>
            <td>@Html.TextBoxFor(model => model.ID, new { style = "filed-validationerror" })</td>
            <td>@Html.ValidationMessageFor(model => model.ID)</td>
        </tr>
        <tr>
            <td style="padding: 5px">@Html.LabelFor(model => model.PasswordUser)</td>
            <td>@Html.EditorFor(model => model.PasswordUser)</td>
            <td>@Html.ValidationMessageFor(model => model.PasswordUser)</td>
            @if (ViewBag.ErrorInfo == null)
            {
                <p>@ViewBag.ErrorInfo</p>
            }
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Login" class="btn btn-primary" /></td>
        </tr>
    </table>
}