@model IEnumerable<webdemofinal.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h2>DANH SÁCH KHÁCH HÀNG</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "KhachHang", FormMethod.Get))
    {
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameCus)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDCus }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDCus }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDCus })
                </td>
            </tr>
        }
    </table>
}